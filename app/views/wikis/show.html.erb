<h1>Wikis#show</h1>
<% if policy(@wiki).update? %>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-danger' %> 
<% end %>
<% if policy(@wiki).destroy? %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
<% end %>  
<h3><%= @wiki.title %></h4>
<h5>Author: 
  <% if @wiki.user %>
    <%= @wiki.user.email %>
  <% else %>
    non-user  	
  <% end %>
</h5>
<p><%= markdown(@wiki.body) %></p>

<% if @wiki.private? %>
  <h4>Collaborators:</h4>
  <ul>
    <% @wiki.users.each do |user| %>
     <li><%= user.email %></li>
    <% end %>
  </ul>
<% end %>
    